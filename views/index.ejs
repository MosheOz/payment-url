<!DOCTYPE html>
<html>
  <head>
    <style>
      #products {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      #products td,
      #products th {
        border: 1px solid #ddd;
        padding: 8px;
      }

      #products tr:nth-child(even) {
        background-color: #f2f2f2;
      }

      #products tr:hover {
        background-color: #ddd;
      }

      #products th {
        padding-top: 12px;
        padding-bottom: 12px;
        text-align: left;
        background-color: #4caf50;
        color: white;
      }

      #total {
        width: 100px;
        padding: 10px;
        margin: auto;
      }
    </style>
  </head>
  <body>
    <table id="products">
      <tr>
        <th>Product</th>
        <th>Amount</th>
        <th>Total</th>
      </tr>
      <tr>
        <td>Apples</td>
        <td>2 kg</td>
        <td>12 NIS</td>
      </tr>
      <tr>
        <td>Orange</td>
        <td>3 kg</td>
        <td>7 NIS</td>
      </tr>
      <tr>
        <td>Tomato</td>
        <td>5 kg</td>
        <td>15 NIS</td>
      </tr>
      <tr>
        <td>Cucumber</td>
        <td>1 kg</td>
        <td>6 NIS</td>
      </tr>
      <tr>
        <td>Guava</td>
        <td>3 kg</td>
        <td>46 NIS</td>
      </tr>
    </table>

    <div id="total">Total : 79.40 NIS</div>

    <button onclick="checkout()">Check Out</button>

    <script
      src="https://code.jquery.com/jquery-3.5.1.min.js"
      integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
      crossorigin="anonymous"
    ></script>

    <script>
      let data = {
        items: [
          {
            Description: "Apples",
            Price: "12",
            Quantity: "2",
          },
          {
            Description: "Orange",
            Price: "7",
            Quantity: "3",
          },
          {
            Description: "Tomato",
            Price: "3",
            Quantity: "5",
          },
          {
            Description: "Cucumber",
            Price: "6",
            Quantity: "1",
          },
          {
            Description: "Guava",
            Price: "46",
            Quantity: "3",
          },
        ],
        customerName: "Moshe",
        sendEmail: true,
        lang: "he",
        email: "moshe@gmail.com",
        IsCreateInvoice: true,
      };
      function checkout() {
        $.ajax({
          url: "http://localhost:3000/payment",
          method: "POST",
          data: JSON.stringify(data),
          // contentType: "application/json",
          // dataType: "json",
          success: function (result) {
            document.write(result);
          },
        });
      }
    </script>
  </body>
</html>
